<div data-status="{{ statusString }}" class="hide-spinner application-list__item--status application-list__item--status--{{ statusString|lower }} applicationStatusCheckable" data-application-number="{{ applicationNumber }}">
  {{ statusStringHumanReadable }}
</div>
<div class="hds-loading-spinner hds-loading-spinner--small">
  <div></div>
  <div></div>
  <div></div>
</div>
<div class="application-list__item--error">
  <span class="hds-icon hds-icon--alert-circle hds-icon--size-s" aria-hidden="true"></span>
  <span class="application-list--error-text">{{ 'There has been an error in updating application status, please reload the page.' }}</span>
</div>
